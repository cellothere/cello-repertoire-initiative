{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,               // already skipping .d.ts checks
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,                // cache project state for faster rebuilds
    "tsBuildInfoFile": ".tsbuildinfo",  // file where incremental metadata is stored
    "paths": {
      "@/*": ["./*"]
    },
    "target": "es5",
    "typeRoots": ["./node_modules/@types", "./global.d.ts"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out",
    "build",
    "coverage"
  ]
}
